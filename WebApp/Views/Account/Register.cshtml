                    '                <div>\n'+
                    '                    <button type="submit" class="btn btn-primary mb-2">Register</button>\n'+
                    '                </div>\n'+
                    '            </form>';
    
    $('#login-p').click(function() {
        $('#register-p').removeClass('active');
        $('#login-p').removeClass('active');
        $('#login-p').addClass('active');
        if( current !== 'login-p'){
            register = document.getElementById('form-lr').innerHTML;
            document.getElementById('form-lr').innerHTML = login;
            current = 'login-p';
        }
    });
    $('#register-p').click(function() {
         $('#login-p').removeClass('active');
         $('#register-p').removeClass('active');
         $('#register-p').addClass('active');
         if( current !== 'register-p'){
                     login = document.getElementById('form-lr').innerHTML;
                     document.getElementById('form-lr').innerHTML = register;
                     current = 'register-p';
            }
        });
</script>